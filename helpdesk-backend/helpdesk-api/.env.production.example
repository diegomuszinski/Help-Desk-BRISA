# Profile do Spring - PRODUCAO
SPRING_PROFILES_ACTIVE=prod

# Banco de Dados PostgreSQL (Producao)
DB_URL=jdbc:postgresql://db.producao.com:5432/helpdesk
DB_USERNAME=app_user
DB_PASSWORD=senha-forte-complexa-producao

# JWT Secret (GERE UM NOVO para producao!)
# openssl rand -base64 32
JWT_SECRET=gere-um-novo-secret-forte-para-producao-256-bits

# CORS - Apenas dominio de producao (SEMPRE HTTPS!)
CORS_ALLOWED_ORIGINS=https://seudominio.com,https://www.seudominio.com

# Logs (opcinal - padrao ja configurado em application-prod.properties)
SHOW_SQL=false
FORMAT_SQL=false
